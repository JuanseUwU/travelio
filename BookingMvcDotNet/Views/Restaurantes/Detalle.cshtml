@model BookingMvcDotNet.Models.MesaDetalleViewModel
@{
    ViewData["Title"] = $"Mesa {Model.NumeroMesa}";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item"><a asp-controller="Restaurantes" asp-action="Index">Restaurantes</a></li>
            <li class="breadcrumb-item active">Mesa @Model.NumeroMesa</li>
        </ol>
    </nav>

    <div class="row g-4">
        <div class="col-lg-7">
            <div class="card shadow-sm border-0">
                @if (!string.IsNullOrEmpty(Model.ImagenUrl))
                {
                    <img src="@Model.ImagenUrl" class="card-img-top" alt="Mesa"
                         style="height: 350px; object-fit: cover;">
                }
                else
                {
                    <div class="d-flex align-items-center justify-content-center" 
                         style="height: 350px; background: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);">
                        <span style="font-size: 8rem;">???</span>
                    </div>
                }
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h2 class="fw-bold mb-1">Mesa #@Model.NumeroMesa</h2>
                            <span class="badge bg-danger">@Model.NombreProveedor</span>
                        </div>
                        <span class="badge bg-success fs-6">@Model.Estado</span>
                    </div>

                    <div class="row g-3 mt-3">
                        <div class="col-md-4">
                            <div class="bg-light rounded p-3 text-center">
                                <div style="font-size: 2rem;">??</div>
                                <div class="fw-bold">@Model.Capacidad personas</div>
                                <small class="text-muted">Capacidad</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="bg-light rounded p-3 text-center">
                                <div style="font-size: 2rem;">??</div>
                                <div class="fw-bold">@Model.TipoMesa</div>
                                <small class="text-muted">Tipo de mesa</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="bg-light rounded p-3 text-center">
                                <div style="font-size: 2rem;">???</div>
                                <div class="fw-bold text-danger">$@Model.Precio.ToString("N2")</div>
                                <small class="text-muted">Por reserva</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="card shadow border-0 sticky-top" style="top: 2rem;">
                <div class="card-body p-4">
                    <h4 class="fw-bold mb-3">??? Reservar mesa</h4>

                    <form id="reserva-form">
                        <input type="hidden" id="servicioId" value="@Model.ServicioId" />
                        <input type="hidden" id="idMesa" value="@Model.IdMesa" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Fecha de reserva</label>
                            <input type="date" class="form-control" id="fecha" 
                                   value="@Model.FechaReserva?.ToString("yyyy-MM-dd")"
                                   min="@DateTime.Today.ToString("yyyy-MM-dd")">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Número de personas</label>
                            <select class="form-select" id="personas">
                                @for (int i = 1; i <= Model.Capacidad; i++)
                                {
                                    <option value="@i" selected="@(i == Model.NumeroPersonas)">
                                        @i @(i == 1 ? "persona" : "personas")
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="border-top pt-3 mb-3">
                            <div class="d-flex justify-content-between fw-bold fs-5">
                                <span>Total</span>
                                <span class="text-danger">$@Model.Precio.ToString("N2")</span>
                            </div>
                        </div>

                        <button type="button" id="btn-agregar" class="btn btn-danger w-100 btn-lg fw-bold">
                            ??? Reservar mesa
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const btnAgregar = document.getElementById('btn-agregar');

            btnAgregar.addEventListener('click', function() {
                const formData = new FormData();
                formData.append('servicioId', document.getElementById('servicioId').value);
                formData.append('idMesa', document.getElementById('idMesa').value);
                formData.append('fecha', document.getElementById('fecha').value);
                formData.append('personas', document.getElementById('personas').value);

                btnAgregar.disabled = true;
                btnAgregar.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Verificando...';

                fetch('@Url.Action("AgregarAlCarrito", "Restaurantes")', {
                    method: 'POST',
                    body: formData
                })
                .then(r => r.json())
                .then(data => {
                    btnAgregar.disabled = false;
                    btnAgregar.innerHTML = '??? Reservar mesa';

                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: '¡Reserva agregada!',
                            text: data.message,
                            showCancelButton: true,
                            confirmButtonText: 'Ir al carrito',
                            cancelButtonText: 'Seguir buscando'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '@Url.Action("Carrito", "Home")';
                            }
                        });
                    } else {
                        Swal.fire('Error', data.message, 'error');
                    }
                });
            });
        });
    </script>
}
