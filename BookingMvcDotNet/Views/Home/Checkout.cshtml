@model BookingMvcDotNet.Models.CheckoutViewModel

@{
    ViewData["Title"] = "Finalizar Compra";
}

<section class="container py-5">
<h2 class="fw-bold mb-4"><i class="bi bi-credit-card"></i> Finalizar Compra</h2>

<div class="row g-4">
    <!-- Resumen del pedido -->
    <div class="col-lg-7">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-white">
                <h5 class="mb-0 fw-bold"><i class="bi bi-box-seam"></i> Resumen del Pedido</h5>
            </div>
                <ul class="list-group list-group-flush">
                    @foreach (var item in Model.Items)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                            <div class="d-flex align-items-center gap-3">
                                @if (!string.IsNullOrEmpty(item.ImagenUrl))
                                {
                                    <img src="@item.ImagenUrl" alt="@item.Titulo" 
                                         class="rounded" style="width: 60px; height: 60px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                                         style="width: 60px; height: 60px; font-size: 1.5rem;">
                                        <i class="bi @(item.Tipo == "CAR" ? "bi-car-front text-primary" : item.Tipo == "HOTEL" ? "bi-building text-success" : item.Tipo == "FLIGHT" ? "bi-airplane text-warning" : "bi-ticket-perforated text-secondary")"></i>
                                    </div>
                                }
                                <div>
                                    <h6 class="mb-1 fw-bold">@item.Titulo</h6>
                                    <small class="text-muted">@item.Detalle</small>
                                </div>
                            </div>
                            <div class="text-end">
                                <span class="fw-bold">@item.PrecioFinal.ToString("C")</span>
                            </div>
                        </li>
                    }
                </ul>
            </div>

            <!-- Formulario de datos de facturación -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-file-text"></i> Datos de Facturación</h5>
                </div>
                <div class="card-body">
                    <form id="checkout-form" asp-action="ProcesarPago" method="post">
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="NombreCompleto" class="form-label"></label>
                                <input asp-for="NombreCompleto" class="form-control" />
                                <span asp-validation-for="NombreCompleto" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="TipoDocumento" class="form-label"></label>
                                <select asp-for="TipoDocumento" class="form-select">
                                    <option value="Cedula">Cédula</option>
                                    <option value="RUC">RUC</option>
                                    <option value="Pasaporte">Pasaporte</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="NumeroDocumento" class="form-label"></label>
                                <input asp-for="NumeroDocumento" class="form-control" />
                                <span asp-validation-for="NumeroDocumento" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Correo" class="form-label"></label>
                                <input asp-for="Correo" type="email" class="form-control" />
                                <span asp-validation-for="Correo" class="text-danger small"></span>
                                <small class="text-muted">Aquí recibirás tus facturas y confirmaciones.</small>
                            </div>

                            <div class="col-12">
                                <hr class="my-3">
                                <h6 class="fw-bold mb-3"><i class="bi bi-bank"></i> Datos Bancarios</h6>
                            </div>

                            <div class="col-12">
                                <label asp-for="NumeroCuentaBancaria" class="form-label"></label>
                                <input asp-for="NumeroCuentaBancaria" class="form-control" 
                                       placeholder="Ej: 12345" inputmode="numeric" />
                                <span asp-validation-for="NumeroCuentaBancaria" class="text-danger small"></span>
                                <small class="text-muted">Ingresa el número de tu cuenta en MiBanca para realizar el pago.</small>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Resumen de pago -->
        <div class="col-lg-5">
            <div class="card border-0 shadow-sm sticky-top" style="top: 2rem;">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4">Resumen de Pago</h5>

                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Subtotal (@Model.Items.Count items)</span>
                        <span class="fw-bold">@Model.Subtotal.ToString("C")</span>
                    </div>

                    <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                        <span class="text-muted">IVA (12%)</span>
                        <span class="fw-bold">@Model.IVA.ToString("C")</span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <span class="h5 fw-bold mb-0">Total a Pagar</span>
                        <span class="h3 fw-bold text-primary mb-0">@Model.Total.ToString("C")</span>
                    </div>

                    <button type="button" id="btn-pagar" class="btn btn-success w-100 btn-lg fw-bold">
                        <i class="bi bi-lock-fill me-2"></i> Pagar Ahora
                    </button>

                    <div class="mt-3 text-center">
                        <small class="text-muted">
                            <i class="bi bi-shield-check"></i> Pago seguro procesado por MiBanca
                        </small>
                    </div>

                    <hr class="my-4">

                    <div class="small text-muted">
                        <p class="mb-2"><strong>Al realizar el pago aceptas:</strong></p>
                        <ul class="ps-3 mb-0">
                            <li>Las políticas de cancelación de cada proveedor</li>
                            <li>Los términos y condiciones de Travelio</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const btnPagar = document.getElementById("btn-pagar");
            const form = document.getElementById("checkout-form");

            // Solo permitir números en cuenta bancaria
            const cuentaInput = document.getElementById("NumeroCuentaBancaria");
            if (cuentaInput) {
                cuentaInput.addEventListener("input", function () {
                    this.value = this.value.replace(/\D/g, "");
                });
            }

            btnPagar.addEventListener("click", function () {
                // Validar formulario
                if (!form.checkValidity()) {
                    form.reportValidity();
                    return;
                }

                Swal.fire({
                    title: 'Confirmar Pago',
                    html: `
                        <p>Se realizará un cargo de <strong>@Model.Total.ToString("C")</strong> a tu cuenta bancaria.</p>
                        <p class="text-muted small">Este proceso puede tardar unos segundos.</p>
                    `,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'Confirmar Pago',
                    cancelButtonText: 'Cancelar',
                    confirmButtonColor: '#198754',
                    showLoaderOnConfirm: true,
                    preConfirm: () => {
                        const formData = new FormData(form);
                        return fetch(form.action, {
                            method: 'POST',
                            body: formData
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (!data.success) {
                                throw new Error(data.message);
                            }
                            return data;
                        })
                        .catch(error => {
                            Swal.showValidationMessage(error.message || 'Error al procesar el pago');
                        });
                    },
                    allowOutsideClick: () => !Swal.isLoading()
                }).then((result) => {
                    if (result.isConfirmed && result.value) {
                        Swal.fire({
                            icon: 'success',
                            title: '¡Pago Exitoso!',
                            text: result.value.message,
                            confirmButtonText: 'Ver Confirmación'
                        }).then(() => {
                            window.location.href = result.value.url;
                        });
                    }
                });
            });
        });
    </script>
}
