@using System.Linq
@using System.Collections.Generic
@model List<BookingMvcDotNet.Models.UserViewModel>

@{
    ViewData["Title"] = "Administración";

    // Configuración traída desde el controlador vía ViewBag (con valores por defecto)
    int ivaPercent = ViewBag.IvaPercent is int iv ? iv : 0;
    int promoDiscount = ViewBag.PromoDiscount is int pd ? pd : 0;
    IEnumerable<string> activeCats =
        ViewBag.PromoCategories as IEnumerable<string> ?? Enumerable.Empty<string>();
}

<div class="container mt-4">
    <h2 class="mb-4">Panel de Administración</h2>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white">
            <ul class="nav nav-tabs card-header-tabs" id="adminTabs" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active" id="config-tab" data-bs-toggle="tab" data-bs-target="#config" type="button">
                        Configuración
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" id="users-tab" data-bs-toggle="tab" data-bs-target="#users" type="button">
                        Usuarios
                    </button>
                </li>
            </ul>
        </div>

        <div class="card-body p-4">
            <div class="tab-content" id="myTabContent">

                <div class="tab-pane fade show active" id="config" role="tabpanel">
                    <form id="configForm">

                        <div class="mb-4 pb-3 border-bottom">
                            <label class="form-label fw-bold">IVA Global (%)</label>
                            <div class="input-group" style="max-width: 200px;">
                                <input type="number" class="form-control" id="ivaInput"
                                       value="@ivaPercent"
                                       min="0" max="100" step="1"
                                       onkeypress="return (event.charCode >= 48 && event.charCode <= 57)"
                                       oninput="if(this.value < 0) this.value = 0; if(this.value > 100) this.value = 100;">
                                <span class="input-group-text">%</span>
                            </div>
                            <div class="form-text">Este impuesto se aplica al final de la compra (Máx 100%).</div>
                        </div>

                        <h5 class="mb-3">Configuración de Promociones</h5>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Estado de la Promoción</label>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="promoActive"
                                       @(promoDiscount > 0 ? "checked" : "")>
                                <label class="form-check-label" for="promoActive">Activar Descuentos</label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Porcentaje de Descuento (%)</label>
                            <div class="input-group" style="max-width: 200px;">
                                <input type="number"
                                       class="form-control @(promoDiscount > 0 ? "" : "bg-light")"
                                       id="discountInput"
                                       value="@promoDiscount"
                                       min="0" max="100" step="1"
                                       onkeypress="return (event.charCode >= 48 && event.charCode <= 57)"
                                       oninput="if(this.value < 0) this.value = 0; if(this.value > 100) this.value = 100;"
                                       @(promoDiscount > 0 ? "" : "readonly")>
                                <span class="input-group-text">%</span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold d-block">Aplicar descuento a:</label>
                            <div class="card p-3 bg-light border-0">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input cat-check" type="checkbox" value="HOTEL" id="checkHotel"
                                                   @(activeCats.Contains("HOTEL") ? "checked" : "")>
                                            <label class="form-check-label" for="checkHotel">🏨 Hoteles</label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input cat-check" type="checkbox" value="FLIGHT" id="checkFlight"
                                                   @(activeCats.Contains("FLIGHT") ? "checked" : "")>
                                            <label class="form-check-label" for="checkFlight">✈️ Vuelos</label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input cat-check" type="checkbox" value="CAR" id="checkCar"
                                                   @(activeCats.Contains("CAR") ? "checked" : "")>
                                            <label class="form-check-label" for="checkCar">🚗 Autos</label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input cat-check" type="checkbox" value="RESTAURANT" id="checkRest"
                                                   @(activeCats.Contains("RESTAURANT") ? "checked" : "")>
                                            <label class="form-check-label" for="checkRest">🍽️ Restaurantes</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-text">
                                Si no seleccionas ninguno, el descuento no se aplicará a nada aunque esté activo.
                            </div>
                        </div>

                        <button type="button" onclick="saveConfig()" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-save"></i> Guardar Configuración
                        </button>
                    </form>
                </div>

                <div class="tab-pane fade" id="users" role="tabpanel">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var user in Model.Where(u => !u.IsAdmin))
                        {
                            var historyId = $"history-{user.Email.Replace("@", "_").Replace(".", "_")}";

                            <div class="border rounded p-3 mb-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="fw-bold mb-0">@user.Nombre @user.Apellido</h6>
                                        <div class="text-muted small">@user.Email</div>
                                    </div>

                                    <button type="button" class="btn btn-link btn-sm text-decoration-none p-0"
                                            data-bs-toggle="collapse" data-bs-target="#@historyId"
                                            aria-expanded="false" aria-controls="@historyId">
                                        Ver historial &gt;
                                    </button>
                                </div>

                                @if (user.Orders != null && user.Orders.Any())
                                {
                                    var lastOrder = user.Orders.OrderByDescending(o => o.Date).First();
                                    <div class="mt-3 bg-light p-2 rounded small">
                                        <strong>Última compra:</strong> $@lastOrder.Total.ToString("N2")
                                        <span class="text-muted">(@lastOrder.Date.ToShortDateString())</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="mt-3 text-muted small fst-italic">Sin compras recientes.</div>
                                }

                                <div class="collapse mt-3" id="@historyId">
                                    @if (user.Orders != null && user.Orders.Any())
                                    {
                                        <div class="table-responsive">
                                            <table class="table table-sm align-middle mb-0">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>Orden ID</th>
                                                        <th>Fecha</th>
                                                        <th>Detalle</th>
                                                        <th class="text-end">Total</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var order in user.Orders.OrderByDescending(o => o.Date))
                                                    {
                                                        <tr>
                                                            <td><small>#@order.OrderId</small></td>
                                                            <td>@order.Date.ToString("dd/MM/yyyy HH:mm")</td>
                                                            <td class="small">
                                                                @if (order.Items != null && order.Items.Any())
                                                                {
                                                                    <ul class="list-unstyled mb-0 ps-2">
                                                                        @foreach (var item in order.Items)
                                                                        {
                                                            <li class="mb-2 border-bottom pb-1">
                                                                                <span class="badge bg-secondary text-white" style="font-size: 0.7em;">@item.Tipo</span>
                                                                                <strong>@item.Titulo</strong>
                                                                                @if (!string.IsNullOrEmpty(item.CodigoReserva))
                                                                                {
                                                                                    <div class="text-muted fst-italic ms-1">Reserva #@item.CodigoReserva</div>
                                                                                }
                                                                                <div>
                                                                                    @item.Cantidad x $@item.PrecioUnitario.ToString("N2")
                                                                                    = <strong>$@item.Total.ToString("N2")</strong>
                                                                                </div>
                                                                            </li>
                                                                        }
                                                                    </ul>
                                                                }
                                                            </td>
                                                            <td class="text-end fw-bold">$@order.Total.ToString("N2")</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="p-2 text-center text-muted">No hay historial disponible.</div>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">No hay usuarios registrados.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Controlar si el input de descuento está activo o no
        document.getElementById('promoActive').addEventListener('change', function (e) {
            const input = document.getElementById('discountInput');
            if (e.target.checked) {
                input.readOnly = false;
                input.classList.remove('bg-light');
                if (input.value === "0") input.value = "10";
            } else {
                input.readOnly = true;
                input.classList.add('bg-light');
                input.value = "0";
                document.querySelectorAll('.cat-check').forEach(c => c.checked = false);
            }
        });

        function saveConfig() {
            const iva = document.getElementById('ivaInput').value;
            const disc = document.getElementById('discountInput').value;

            let selectedCats = [];
            document.querySelectorAll('.cat-check:checked').forEach((checkbox) => {
                selectedCats.push(checkbox.value);
            });

            let formData = new FormData();
            formData.append('iva', iva);
            formData.append('discount', disc);
            formData.append('categories', selectedCats.join(','));

            fetch('/Home/UpdateConfig', { method: 'POST', body: formData })
                .then(res => {
                    if (res.ok) Swal.fire('Guardado', 'Configuración actualizada correctamente', 'success');
                    else Swal.fire('Error', 'No se pudo guardar la configuración', 'error');
                })
                .catch(err => Swal.fire('Error', 'Fallo de conexión con el servidor', 'error'));
        }
    </script>
}
