@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/es.js"></script>
    <script>
        // Cargar ciudades disponibles para el autocomplete
        async function loadCities() {
            try {
                const res = await fetch('/Home/CiudadesDisponibles');
                const data = await res.json();
                if (data.success && data.cities) {
                    const list = document.getElementById('citiesList');
                    list.innerHTML = '';
                    data.cities.forEach(c => {
                        const opt = document.createElement('option');
                        opt.value = c;
                        list.appendChild(opt);
                    });
                }
            } catch (_) { }
        }

        // Si se selecciona una ciudad, opcionalmente mostrar recomendaciones (se usa en Detalles también)
        async function showRecommendationsForCity(ciudad, excludeTipo, excludeTitulo) {
            try {
                const url = `/Home/RecomendacionesCiudad?ciudad=${encodeURIComponent(ciudad)}&excludeTipo=${encodeURIComponent(excludeTipo||'')}&excludeTitulo=${encodeURIComponent(excludeTitulo||'')}`;
                const res = await fetch(url);
                const data = await res.json();
                return data.items || [];
            } catch { return []; }
        }

        document.addEventListener('DOMContentLoaded', function() { loadCities(); });
    </script>
}
